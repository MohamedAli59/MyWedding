{% extends 'admin.html.twig' %}

{% block title %}Mariages{% endblock %}

{% block container %}


    <div class="card-body text-center col-lg-9 mt-3 mb-5 mx-auto" id="container">
        <h1 class="mb-4 bienvenue  col-12">Voir Mariage</h1>
        <div class="row">
            <div class=" col-lg-6 col-xl-6">
                <div class="card mt-5 col-8 col-sm-8 col-md-7 col-lg-12 col-xl-12 mx-auto cardInfos text-center">
                    <h4 class="font-weight-bold text-left pl-3 pt-2">Infos Général</h4>
                    <div class="mt-4 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6 mb-0  pt-2"
                               for="nomM">Nom du Mariage:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                        {{ mariage.nom }}
                        </div>
                    </div>
                    <div class="mt-2 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6  mb-0  pt-2"
                               for="personne1">Personne 1:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">

                           {# {{ client.Nom }} #}
                        </div>
                    </div>
                    <div class="mt-2 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6  mb-0  pt-2"
                               for="personne2">Personne 2:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                           {# {{ client.Nom }} #}
                        </div>
                    </div>
                    <div class="mt-2 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6  mb-0  pt-2"
                               for="date">Date:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                            {{ mariage.Date ? mariage.Date|date('d-m-Y') : '' }}
                        </div>
                    </div>
                    <div class="mt-2 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6 mb-0   pt-2"
                               for="lieu">Lieu:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                            {{ mariage.Lieu }}
                        </div>
                    </div>
                    <div class="mt-2 mb-3 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6 mb-0  pt-2"
                               for="personnes">Nb de Personnes:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                            {{ mariage.NBInvites }}
                        </div>
                    </div>
                </div>

                <div class="card mt-5 col-8 col-sm-8 col-md-6 col-lg-12 col-xl-12 mx-auto panel cardInfos">
                    {{ form_start(form) }}
                    <div class="mt-4 row justify-content-center">
                        <label class=" font-weight-bold col-12 col-md-5 col-lg-5 mb-0  pt-2"
                               for="name">Nom:</label>
                        <div class="text-center  col-11 col-md-5 col-lg-5">
                        {{ form_widget(form.nom) }}
                        </div>
                    </div>
                    <div class="mt-4 row justify-content-center">
                        <label class=" font-weight-bold col-12 col-md-5 col-lg-5 mb-0  pt-2"
                               for="contenu">Commentaire:</label>
                        <div class="text-center  col-11 col-md-5 col-lg-5">
                            {{ form_widget(form.Contenu) }}
                        </div>
                    </div>
                    <div class="text-right mt-3 mb-3">
                        <button type="submit" class="btn btn-dark flip" name="Modifier">Ajouter</button>
                    </div>
                    {{ form_end(form) }}
                </div>

                <div class="card mt-5 col-8 col-sm-8 col-md-7 col-lg-12 col-xl-12 mx-auto cardInfos text-center">
                    <h4 class="font-weight-bold text-center pt-2">Commentaires</h4>
                    <div class="mt-4 mb-3">
                        <ol class="list-group">
                            {% for commentaire in commentaire %}
                            <li class="list-group-item">{{ commentaire.Nom }} {{ commentaire.contenu }}</li>
                            {% endfor %}
                        </ol>
                    </div>
                    <div class="btn-group btn-group-sm mb-3 " role="group" aria-label="...">
                        <button type="button" class="btn btn-dark flip"><i
                                    class="fas fa-folder-plus"></i></button>
                        <a href="#" type="button" class="btn btn-info"><i class="fas fa-edit"></i></a>
                        <a href="#" type="button" class="btn btn-danger "><i
                                    class="fas fa-trash-alt"></i></a>
                    </div>
                </div>
            </div>
            <div class="card2 mt-5 col-8 col-sm-8 col-md-7 col-lg-3 col-xl-3 mx-auto cardInfos text-center">
                <div class="card cardInfos text-center">
                    <h4 class="font-weight-bold text-center pt-2">Prestations</h4>
                    <div class="mt-4 mb-3 mx-auto  col-11">
                        <ul class="list-group">
                           {% for prestation in prestationM %}
                                <li class="list-group-item">{{prestation.prestation.Nom}}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="btn-group btn-group-sm mx-auto  mb-3 col-11" role="group" aria-label="...">
                        <button type="button" class="btn btn-dark flip1"><i
                                    class="fas fa-folder-plus"></i></button>
                        <a href="#" type="button" class="btn btn-info"><i class="fas fa-edit"></i></a>
                        <a href="#" type="button" class="btn btn-danger "><i
                                    class="fas fa-trash-alt"></i></a>
                    </div>
                    <div class="mb-3">
                        <fieldset class="panel1">
                            <ul class="list-group col-11 mx-auto p-0">
                                {% for prestation in prestations %}
                                <li class="list-group-item"><label for="checkbox-nested-1"> {{ prestation.Nom }}
                                        <input type="checkbox" name="checkbox-nested-1" id="checkbox-nested-1">
                                    </label></li>
                                {% endfor %}
                            </ul>
                            <button type="submit" class="btn btn-dark mt-3 flip1" name="valider">Valider</button>
                        </fieldset>
                    </div>
                </div>
            </div>

        </div>
        <div class="btn-group btn-group-sm mt-3 mb-5  actionMobile" role="group" aria-label="...">
            <a href="AdminModifMariage.html" type="button" class="btn btn-info">Modiffier</a>
            <a href="#" type="button" class="btn btn-danger ">Supprimer</a>
        </div>

    </div>










{% endblock %}
