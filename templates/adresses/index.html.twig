{% extends 'admin.html.twig' %}

{% block title %}Adresses index{% endblock %}

{% block container %}
    <h1>Adresses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Voie</th>
                <th>Ville</th>
                <th>Code_Postal</th>
                <th>Pays</th>
                <th>Date_add</th>
                <th>Date_update</th>
                <th>Date_delete</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                <td>{{ adress.id }}</td>
                <td>{{ adress.Numero }}</td>
                <td>{{ adress.Voie }}</td>
                <td>{{ adress.Ville }}</td>
                <td>{{ adress.CodePostal }}</td>
                <td>{{ adress.Pays }}</td>
                <td>{{ adress.dateAdd ? adress.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ adress.dateUpdate ? adress.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ adress.dateDelete ? adress.dateDelete|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('adresses_show', {'id': adress.id}) }}">show</a>
                    <a href="{{ path('adresses_edit', {'id': adress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adresses_new') }}">Create new</a>
{% endblock %}
