{% extends 'admin.html.twig' %}

{% block title %}Mariages{% endblock %}

{% block container %}




    <div class="card-body text-center col-lg-9 mt-3 mb-5 mx-auto" id="container">
        <h1 class="mb-4 bienvenue  col-12">Voir Mariage</h1>
        <div class="row">
            <div class=" col-lg-6 col-xl-6">
                <div class="card mt-5 col-10 col-sm-10 col-md-7 col-lg-12 col-xl-12 mx-auto cardInfos text-center">
                    <h4 class="font-weight-bold text-left pl-3 pt-2">Infos Général</h4>
                    <div class="mt-4 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6 mb-0  pt-2"
                               for="nomM">Nom du Mariage:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                            {{ mariage.nom }}
                        </div>
                    </div>
                    <div class="mt-2 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6  mb-0  pt-2  align-self-center"
                               for="client">Clients:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                            <ul class="list-group list-group-flush">
                                {% for clients in mariage.client %}
                                    <li class="form-control-plaintext text-center"> {{ clients.prenom }} {{ clients.nom }}</li>
                                {% endfor %}
                            </ul>

                        </div>
                    </div>
                    <div class="mt-2 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6  mb-0  pt-2"
                               for="date">Date:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                            {{ mariage.Date ? mariage.Date|date('d-m-Y') : '' }}
                        </div>
                    </div>
                    <div class="mt-2 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6 mb-0   pt-2"
                               for="lieu">Lieu:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                            {{ mariage.Lieu }}
                        </div>
                    </div>
                    <div class="mt-2 mb-3 row">
                        <label class=" font-weight-bold col-12 col-md-6 col-lg-6 mb-0  pt-2"
                               for="personnes">Nb de Personnes:</label>
                        <div class="form-control-plaintext text-center  col-12 col-md-6 col-lg-6">
                            {{ mariage.NBInvites }}
                        </div>
                    </div>
                </div>

                <div class="card mt-5 col-10 col-sm-10 col-md-6 col-lg-12 col-xl-12 mx-auto panel cardInfos">
                    {{ form_start(form) }}
                    <div class="mt-4 row justify-content-center">
                        <label class=" font-weight-bold col-12 col-md-5 col-lg-5 mb-0  pt-2"
                               for="name">Nom:</label>
                        <div class="text-center  col-11 col-md-5 col-lg-5">
                            {{ form_widget(form.nom) }}
                        </div>
                    </div>
                    <div class="mt-4 row justify-content-center">
                        <label class=" font-weight-bold col-12 col-md-5 col-lg-5 mb-0  pt-2"
                               for="contenu">Commentaire:</label>
                        <div class="text-center  col-11 col-md-5 col-lg-5">
                            {{ form_widget(form.Contenu) }}
                        </div>
                    </div>
                    <div class="text-right mt-3 mb-3">
                        <button type="submit" class="btn btn-dark flip mr-2" name="Modifier">Ajouter</button>
                    </div>
                    {{ form_end(form) }}
                </div>

                <div class="card mt-5 col-10 col-sm-10 col-md-7 col-lg-12 col-xl-12 mx-auto cardInfos text-center">
                    <h4 class="font-weight-bold text-center pt-2">Commentaires</h4>
                    <div class="mt-4 mb-3">
                        <ol class="list-group">
                            {% for commentaire in commentaire %}
                                <li class="list-group-item">{{ commentaire.Nom }} {{ commentaire.contenu }}</li>
                            {% endfor %}
                        </ol>
                    </div>
                    <div class="btn-group btn-group mb-3 justify-content-end" role="group" aria-label="...">
                        <button type="button" class="btn btn-dark flip col-3 col-lg-2"><i
                                    class="fas fa-folder-plus"></i></button>
                    </div>
                </div>
            </div>
            <div class="card2 mt-5 col-10 col-sm-10 col-md-7 col-lg-3 col-xl-3 mx-auto cardInfos text-center">
                <div class="card cardInfos text-center">
                    <h4 class="font-weight-bold text-center pt-2">Prestations</h4>
                    <div class="mt-4 mb-3 mx-auto  col-12">
                        <ul class="list-group">
                            {% for presta in mariage.prestation %}
                                <li class="list-group-item">{{ presta.Nom }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="btn-group btn-group mx-auto  mb-3 col-12 justify-content-end" role="group" aria-label="...">
                        <button type="button" class="btn btn-dark flip1 col-3 col-lg-3"><i
                                    class="fas fa-folder-plus"></i></button>
                    </div>
                    <div class="mb-2">
                        {{ form_start(form1) }}
                        <fieldset class="panel1">
                            <ul class="list-group col-11 mx-auto p-0">
                                <li class="list-group-item text-left"><label
                                            for="checkbox-nested-1">  {{ form_widget(form1.prestation) }}
                                    </label></li>
                            </ul>
                            <button type="submit" class="btn btn-dark mt-3 flip1" name="valider">Valider</button>
                        </fieldset>
                        {{ form_end(form1) }}
                    </div>
                </div>
            </div>

        </div>
        <div class="btn-group btn-group-sm mt-4 mb-5  actionMobile" role="group" aria-label="...">
            <a href="{{ path('mariages_edit', {'id': mariage.id}) }}" type="button" class="btn btn-info text-center pt-2">Modiffier</a>
            {{ include('mariages/_delete_form.html.twig') }}
        </div>

    </div>


{% endblock %}
